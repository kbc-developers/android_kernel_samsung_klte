# set kernel version
export TARGET_DEVICE=SC04F
export BUILD_MOD=KBC
export BUILD_VERSION=V0.1.0

# set build user and host
export KBUILD_BUILD_VERSION="1"
export KBUILD_BUILD_USER="sakuramilk"
export KBUILD_BUILD_HOST="KBC"

# set kernel option
export KERNEL_CMDLINE="console=null androidboot.hardware=qcom user_debug=31 msm_rtb.filter=0x37 ehci-hcd.park=3 androidboot.selinux=permissive"
export KERNEL_BASEADDRESS=0x00000000
export KERNEL_RAMDISK_OFFSET=0x02000000
export KERNEL_TAGS_OFFSET=0x01e00000
export KERNEL_PAGESIZE=2048
export KERNEL_DEFCONFIG=msm8974pro_sec_klte_dcm_defconfig

# ramdisk
if [ "$BUILD_TARGET" = 'RECO' ]; then
  export RAMDISK_SRC_DIR=../sc04f_recovery_ramdisk
  export RAMDISK_TMP_DIR=/tmp/sc04f_recovery_ramdisk
  export IMG_MAX_SIZE=15728640
else
  export RAMDISK_SRC_DIR=../sc04f_boot_ramdisk
  export RAMDISK_TMP_DIR=/tmp/sc04f_boot_ramdisk
  export IMG_MAX_SIZE=13631488
fi
